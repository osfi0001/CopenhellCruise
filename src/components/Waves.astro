<style>
.marquee {
    position: relative;
    width: 100%;
    overflow: hidden;
    height: 100px;
    line-height: 0; /* Remove whitespace between inline-block images */
}

.marquee__inner {
    display: flex;
    width: max-content;
    animation: marquee 30s linear infinite;
}

.marquee__img {
    display: block;
    height: 100px;
    width: auto;
    object-fit: contain;
    flex-shrink: 0;
    margin: 0;
    padding: 0;
}

@keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
}
</style>

<div class="marquee">
    <div class="marquee__inner">
