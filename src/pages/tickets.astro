---
import MainLayout from "../layouts/MainLayout.astro"
import Button from '../components/Button.astro';
---
<MainLayout>
<section>
    <h1 class="font-grenze flex flex-col items-center justify-center text-[36px] md:text-[128px] text-[#E3F2C4] font-bold">Køb dine Billetter</h1>

    <section class="flex flex-col items-center justify-center gap-4 md:grid md:grid-cols-2 md:place-items-center md:justify-center md:min-h-screen md:gap-6 md:px-18">
        <!--Single Sailor-->
        <div class="transition-all duration-300 mt-3 bg-transparent text-[#E3F2C4] text-center flex flex-col items-center p-6 md:p-10 border border-[#E3F2C4] w-full max-w-[330px] max-h-[366px] md:max-w-[540px] md:max-h-none px-[clamp(1.5rem,4vw,2.5rem)]">
            <img src="singlesailor.svg" alt="single sailor" class="mx-auto pt-3" />
            <h2 class="font-heebo text-[clamp(24px,4vw,36px)] font-bold mb-2">SINGLE SAILOR</h2>
            <p class="font-heebo text-[clamp(16px,2vw,24px)]">Kahyt + Event<br />ved 1 person</p>
            <h3 class="font-heebo font-black text-[clamp(76px,10vw,125px)]">1425</h3>
            <Button></Button>
        </div>
        <!--Standard-->
        <div class="transition-all duration-300 mt-3 bg-transparent text-[#E3F2C4] text-center flex flex-col items-center p-6 md:p-10 border border-[#E3F2C4] w-full max-w-[330px] max-h-[366px] md:max-w-[540px] md:max-h-none px-[clamp(1.5rem,4vw,2.5rem)]">
            <img src="singlesailor.svg" alt="single sailor" class="mx-auto pt-3" />
            <h2 class="font-heebo text-[clamp(24px,4vw,36px)] font-bold mb-2">STANDARDPAKKE</h2>
            <p class="font-heebo text-[clamp(16px,2vw,24px)]">Kahyt + Event<br />pr. person ved 2 personer</p>
            <h3 class="font-heebo font-black text-[clamp(76px,10vw,125px)]">1425</h3>
            <Button></Button>
        </div>
        <!--Hells Delight-->
        <div class="transition-all duration-300 mt-3 bg-transparent text-[#E3F2C4] text-center flex flex-col items-center p-6 md:p-10 border border-[#E3F2C4] w-full max-w-[330px] max-h-[366px] md:max-w-[540px] md:max-h-none px-[clamp(1.5rem,4vw,2.5rem)]">
            <img src="singlesailor.svg" alt="single sailor" class="mx-auto pt-3" />
            <h2 class="font-heebo text-[clamp(24px,4vw,36px)] font-bold mb-2">HELLS DELIGHT</h2>
            <p class="font-heebo text-[clamp(16px,2vw,24px)]">Kahyt + Event + Buffet lørdag morgen + aftenbuffet begge dage inkl. 1 drik<br />bar ved 2 personer</p>
            <h3 class="font-heebo font-black text-[clamp(76px,10vw,125px)]">1425</h3>
            <Button></Button>
        </div>
        <!--All In Hell-->
        <div class="transition-all duration-300 mt-3 bg-transparent text-[#E3F2C4] text-center flex flex-col items-center p-6 md:p-10 border border-[#E3F2C4] w-full max-w-[330px] max-h-[366px] md:max-w-[540px] md:max-h-none px-[clamp(1.5rem,4vw,2.5rem)]">
            <img src="singlesailor.svg" alt="single sailor" class="mx-auto pt-3" />
            <h2 class="font-heebo text-[clamp(24px,4vw,36px)] font-bold mb-2">ALL IN HELL</h2>
            <p class="font-heebo text-[clamp(16px,2vw,24px)]">Kahyt + Event + Buffet lørdag morgen + aftenbuffet begge dage inkl. 1 drik<br />+Fri bar ved 2 personer</p>
            <h3 class="font-heebo font-black text-[clamp(76px,10vw,125px)]">1425</h3>
            <Button></Button>
        </div>
    </section>
</section>
</MainLayout>
